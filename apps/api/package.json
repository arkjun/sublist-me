{
  "name": "@sublistme/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 migrations apply sublistme-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply sublistme-db",
    "db:seed": "tsx scripts/seed.ts > scripts/seed.sql && wrangler d1 execute sublistme-db --local --file=scripts/seed.sql",
    "db:seed:prod": "tsx scripts/seed.ts > scripts/seed.sql && wrangler d1 execute sublistme-db --file=scripts/seed.sql"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@sublistme/db": "workspace:*",
    "arctic": "^3.7.0",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.11.4",
    "lucia": "^3.2.2",
    "oslo": "^1.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/runner": "^3.2.4",
    "@vitest/snapshot": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.59.1"
  }
}
