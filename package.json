{
  "name": "sublistme",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @sublistme/api dev",
    "dev:web": "pnpm --filter @sublistme/web dev",
    "build": "pnpm -r build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "pnpm --filter @sublistme/api test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "pnpm --filter @sublistme/db generate",
    "db:migrate": "pnpm --filter @sublistme/api db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^3.2.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.0"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=20"
  }
}
