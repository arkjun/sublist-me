{
  "name": "magami",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @magami/api dev",
    "dev:web": "pnpm --filter @magami/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "db:generate": "pnpm --filter @magami/db generate",
    "db:migrate": "pnpm --filter @magami/api db:migrate"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=20"
  }
}
